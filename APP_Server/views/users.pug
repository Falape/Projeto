extends layout
block content
    script.
        function range = function(a, b, step) { 
            var range= [];
            if (typeof a == 'number'){
                range[0] = a;
                step = step || 1;
                    while(a+step<= b){
                        range[range.length]= a+= step;
                    }
            } else {
                var s = 'abcdefghijklmnopqrstuvwxyz';
                if (a === a.toUpperCase()) {
                        b = b.toUpperCase();
                        s = s.toUpperCase();
                }
                s = s.substring(s.indexOf(a), s.indexOf(b)+ 1);
                range = s.split('');        
            }
            return range;
        }
    div.container
        div.row 
            h1 Utilizadores: 
            form(action='/', method='POST')
                span.label  username: 
                    input(type='text', name='username', value='')
                span.label level: 
                    select(name='level', value='selecione o level')
                        option(value="admin")
                        option(value="producer")
                        option(value="consumer")   
            input(class="button tertiary" type="submit" value="search")
